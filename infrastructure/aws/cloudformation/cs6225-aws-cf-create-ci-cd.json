{"AWSTemplateFormatVersion": "2010-09-09",
 "Resources": {
   "IAMPolicyForEC2CodeDeployAssignment6CICD": {
     "Type": "AWS::IAM::Policy", 
     "Properties": {
       "PolicyName": "IAMPolicyForEC2CodeDeployAssignment6CICD",
       "Roles": [{
           "Ref": "CodeDeployEC2ServiceRoleAssignment6CICD"
       }],
       "PolicyDocument": {
           "Version": "2012-10-17",
           "Statement": [
               {
                   "Action": [
                       "s3:Get*",
                       "s3:List*"
                   ],
                   "Effect": "Allow",
                   "Resource": "arn:aws:codedeploy:us-east-1:377915458523:application:S3BuildArtifactBucketAssignment6CICD"
               }
           ]
       }
     }
   } ,"IAMPolicyForS3TravisAssignment6CICD": {
     "Type": "AWS::IAM::Policy", 
     "Properties": {
       "PolicyName": "IAMPolicyForS3TravisAssignment6CICD",
       "Roles": [{
           "Ref": "TravisCodeDeployServiceRoleAssignment6CICD"
       }],
       "PolicyDocument": {
           "Version": "2012-10-17",
           "Statement": [
               {
                   "Effect": "Allow",
                   "Action": [
                       "s3:putObject"
                   ],
                   "Resource": [
                       "arn:aws:codedeploy:us-east-1:377915458523:application:S3BuildArtifactBucketAssignment6CICD"
                   ]
               }
           ]
       }
     }
   },"TravisCodeDeployPolicyAssignment6CICD": {
   	  "Type": "AWS::IAM::Policy",
   	  "Properties": {
   	  	"PolicyName": "TravisCodeDeployPolicyAssignment6CICD",
        "Roles": [{
            "Ref": "TravisCodeDeployServiceRoleAssignment6CICD"
        }],
        "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
                {
                    "Effect": "Allow",
                    "Action": [
                        "codedeploy:RegisterApplicationRevision",
                        "codedeploy:GetApplicationRevision"
                    ],
                    "Resource": [
                         "arn:aws:codedeploy:us-east-1:377915458523:application:CodeDeployApplicationAssignment6CICD"
                    ]
                },
                {
                    "Effect": "Allow",
                    "Action": [
                        "codedeploy:CreateDeployment",
                        "codedeploy:GetDeployment"
                    ],
                    "Resource": [
                        "arn:aws:codedeploy:us-east-1:377915458523:application:CodeDeployApplicationAssignment6CICD"
                    ]
                },
                {
                    "Effect": "Allow",
                    "Action": [
                        "codedeploy:GetDeploymentConfig"
                    ],
                    "Resource": [
                        "arn:aws:codedeploy:us-east-1:377915458523:deploymentconfig:CodeDeployDefault.OneAtATime",
                        "arn:aws:codedeploy:us-east-1:377915458523:deploymentconfig:CodeDeployDefault.HalfAtATime",
                        "arn:aws:codedeploy:us-east-1:377915458523:deploymentconfig:CodeDeployDefault.AllAtOnce"
                    ]
                }
            ]
        }
      }
   	}, "CodeDeployEC2ServiceRoleAssignment6CICD": {
           "Type": "AWS::IAM::Role",
           "Properties": {
               "AssumeRolePolicyDocument": {
                   "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "s3.amazonaws.com"
                            }
                        }
                    ]
               },
               "RoleName": "CodeDeployEC2ServiceRoleAssignment6CICD"
           }
    }, "TravisCodeDeployServiceRoleAssignment6CICD": {
        "Type": "AWS::IAM::Role",
        "Properties": {
            "AssumeRolePolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
                    {
                        "Effect": "Allow",
                        "Principal": {
                            "Service": "codedeploy.amazonaws.com"
                        },
                        "Action": [
                            "sts:AssumeRole"
                        ]
                    }
                ] 
            }
        }
    }, "S3BuildArtifactBucketAssignment6CICD": {
        "Type": "AWS::S3::Bucket",
        "Properties": {
            "BucketName": "code-deploy.csye6225-spring2018-wux.tld"
        }
    }, "CodeDeployApplicationAssignment6CICD": {
        "Type": "AWS::CodeDeploy::Application",
        "Properties": {
            "ApplicationName": "CodeDeployApplicationAssignment6CICD"
        }
    }
  }
}
